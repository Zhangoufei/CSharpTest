<Window x:Class="WPF布局1.Pannel.SliderTest1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF布局1.Pannel"
        mc:Ignorable="d"
        Title="SliderTest1" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textBox1" Text="{Binding Path=Value,ElementName=slider1,UpdateSourceTrigger=PropertyChanged}"  BorderBrush="Black"></TextBox>
            <Slider x:Name="slider1" Maximum="100" Minimum="0" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
