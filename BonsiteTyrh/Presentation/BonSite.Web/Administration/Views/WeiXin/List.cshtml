@model BonSite.Web.Admin.Models.ArticleListModel

@{
    ViewBag.Title = "List";
}

@section body{
    @using (Html.BeginForm("List", "WeiXin"))
    {
        <div class="main">
            <div class="nav">
                当前位置：
                <span> &rsaquo; </span> <a href="#">系统管理</a>
                <span> &rsaquo; </span> <a href="#">微信素材管理</a>


            </div>

            <ul class="submenu">
                <li class="sel"><a href="#">微信素材列表</a></li>
                <li><a href="@Url.Action("Add")">新加新内容</a></li>
            </ul>


            <div class="top15">
                <table width="100%" cellpadding="5" cellspacing="0" class="tblist">
                    <tr>
                        <th width="40" align="center"><input type="checkbox" id="allSelect" /></th>

                        <th width="130" align="left">标题</th>
                        <th width="250" align="left">摘要</th>
                        <th align="left">作者</th>
                    </tr>
                    @{
        foreach (BonSite.Core.ArticleInfo info in Model.DataInfoList)
        {
            <tr>
                <td align="center"><input type="checkbox" value="" selectitem="true" name="idList" /></td>

                <td>@info.Title</td>
                <td>@info.Digest</td>
                <td>@info.Description</td>

            </tr>
        }
                    }
                </table>
                <div class="dataListEdit">
                    <a href="#" delurl="@Url.Action("del")" class="batch batchDel">批量删除</a>
                </div>
            </div>

        </div>

    }
}
