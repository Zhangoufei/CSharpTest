
@model BonSite.Web.Admin.Models.ShopListModel
@{
    ViewBag.Title = "List";
}

@section body{
    @using (Html.BeginForm("List", "FriendLink"))
{
     <div class="main">
<div class="nav">当前位置：
     <span> &rsaquo; </span> <a href="#">系统管理</a> 
     <span> &rsaquo; </span> <a href="#">店铺管理</a> 
</div>

        <ul class="submenu">
        	<li class="sel"><a href="#">店铺列表</a></li>
        	<li ><a href="@Url.Action("Add")">新加新内容</a></li>
        </ul>


    <div class="top15">
        	<table width="100%" cellpadding="5" cellspacing="0" class="tblist">
            	<tr>
                    <th width="40" align="center"><input type="checkbox" id="allSelect"/></th>
                    <th align="left" >店铺名称</th>
                    <th align="left" >地址</th>
                    <th  width="90" align="left" >电话</th>  
	                <th width="90" align="left">城市</th>  
                    <th width="60" align="left" >排序</th>  
                    <th width="90" align="left">管理操作</th>
                </tr>
                @foreach (DataRow row in Model.DataList.Rows)
  {
  <tr>
    <td align="center"><input type="checkbox" value="@row["ShopID"]" selectItem="true" name="idList" /></td>
    <td>@row["ShopName"]</td>
    <td>@row["Address"]</td>
    <td>@row["Tel"]</td>
    <td>@row["Area"]</td>
    <td>@row["OrderID"]</td>
    <td>
        @Html.ActionLink("编辑", "edit", new { ShopID = row["ShopID"] }, new { @class = "editOperate" })
        @Html.ActionLink("删除", "del", new { shopidList = row["ShopID"] }, new { @class = "deleteOperate" })
    </td>
    </tr>
  }
  
                </table>
        <div class="dataListEdit">
<a href="#" delUrl="@Url.Action("del")" class="batch batchDel">批量删除</a>
</div>
        <div class="pagelist">
     @Html.AdminPager(Model.PageModel)
</div>
</div>
         
         </div>
    
    }
}