@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>统一内容发布系统  -  @WorkContext.SiteConfig.SiteName</title>
    <!--<link  href="/administration/Content/Css/style.css"  rel="stylesheet"  type="text/css"  />-->
    <link href="/administration/Content/Css/indexstyleTest.css" rel="stylesheet" type="text/css" />
    <link href="/administration/Content/Css/font-awesome.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="position:relative;">

    <!--顶部part开始-->
    <div class="topbar">
        <!--顶部菜单开始-->
        <div class="topmenu" style="margin-top:5px;width:535px;line-height:30px;">
            <ul>
                <li style="margin-right:30px;"><i class="fa  fa-sign-out"></i><a href="http://192.168.18.106:8002/">退出</a></li>
                <li><a href="@Url.Action("EditPassword","Account")" target="frmmain">修改密码</a></li>
                <li><a href="@Url.Action("SiteRunInfo","Home")" target="frmmain">管理首页</a></li>
                <li><a href="/">官网首页</a></li>
                <li>当前用户：@WorkContext.UserName（@WorkContext.NickName）</li>
                <li><input type="text" id="seachText" style="margin-right:10px;width:170px;" /><a id="scarchAll" style="cursor:pointer;margin-right:2px;"><i class="fa  fa-search" aria-hidden="true"></i></a></li>
            </ul>
        </div>
        <!--顶部菜单结束-->
        <!--LOGO开始-->
        <div class="logo">
            <div class="logoPic"></div>
            @WorkContext.SiteConfig.SiteName  -  统一内容发布系统
        </div>
        <!--LOGO结束-->
    </div>

    <!--顶部part结束-->
    <div class="slideBox">
        <div class="side"><iframe id="frmleft" name="frmleft" frameborder="0" src="@Url.Action("Menu")"></iframe></div>
    </div>
    <div class="mainBox">
        <div class="main"><iframe id="frmmain" name="frmmain" frameborder="0" src="@Url.Action("SiteRunInfo")"></iframe></div>
    </div>
    <div class="bottom">版本：@WorkContext.SiteVersion  @WorkContext.SiteCopyright</div>

</body>
<script>

    document.getElementById("scarchAll").onclick = function () {
        var txt = document.getElementById("seachText").value;
        document.getElementById("frmmain").src = "/admin/Article/SearchPage?search=" + txt;
    }
    document.onkeyup = function (e) {//按键信息对象以函数参数的形式传递进来了，就是那个e
        var code = e.charCode || e.keyCode;    //取出按键信息中的按键代码(大部分浏览器通过keyCode属性获取按键代码，但少部分浏览器使用的却是charCode)
        if (code == 13) {
            //此处编写用户敲回车后的代码
            var txt = document.getElementById("seachText").value;
            document.getElementById("frmmain").src = "/admin/Article/SearchPage?search=" + txt;
        }
    }
</script>
</html>