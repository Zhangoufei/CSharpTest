@model BonSite.Web.Admin.Models.VoteModel
@{
    ViewBag.Title = "EditVote";
}

@section body{
     <div class="main">
<div class="nav">当前位置：
     <span> &rsaquo; </span> <a href="#">系统管理</a> 
     <span> &rsaquo; </span> <a href="@Url.Action("VoteList")">投票管理</a> 
     <span> &rsaquo; </span> <a href="#">编辑投票信息</a> 

</div>

        <ul class="submenu">
        	<li><a href="@Url.Action("VoteList")">投票管理</a></li>
        	<li class="sel"><a href="#">编辑投票信息</a></li>
        </ul>


    @using (Html.BeginForm())
       { 
           <div class="top15">
        <table width="100%" class="tbstyle1" cellpadding="5" cellspacing="1">
            <tr>
    <th width="80px" align="right">主题：</th>
    <td>@Html.TextBoxFor(x => x.Title, new { @class = "input", size = "35" })</td>
    </tr>
           
            <tr>
                <th>类型：</th>
                <td>                    
            <p>
                <label>@Html.RadioButtonFor(x => x.Type, 0, new { @class = "checkbox" }) 单选</label>
                <label>@Html.RadioButtonFor(x => x.Type, 1, new { @class = "checkbox" }) 多选</label>
              
            </p>

                </td>
            </tr>
   
    <tr>
    <th align="right">时间：</th>
    <td>
        @Html.TextBoxFor(x => x.StartTime, new { @class = "input", size = "18", onfocus = "WdatePicker({el:'StartTime'})" })
        至
        @Html.TextBoxFor(x => x.EndTime, new { @class = "input", size = "18", onfocus = "WdatePicker({el:'EndTime'})" })
        @Html.ValidationMessageFor(x => x.StartTime)
        @Html.ValidationMessageFor(x => x.EndTime)
    
    </td>
    </tr>
       
    <tr>
        <th align="right">状态：</th>
        <td>
            <p>
                <label>@Html.RadioButtonFor(x => x.State, 1, new { @class = "checkbox" }) 开启</label>
                <label>@Html.RadioButtonFor(x => x.State, 0, new { @class = "checkbox" }) 关闭</label>
                <br />
            </p>
        </td>
    </tr>
    
            <tr>
                <th></th>
                <td><input type="submit" value="提交" /></td>
            </tr>
        </table>

           </div>
       }

         
         </div>
    
    }
