@model BonSite.Web.Admin.Models.VoteResultListModel
@{
    ViewBag.Title = "VoteResultsList";
}

@section body{
<div class="main">
<div class="nav">当前位置：
     <span> &rsaquo; </span> <a href="#">投票管理</a> 
     <span> &rsaquo; </span> <a href="#">投票选项管理</a> 
    

</div>

        <ul class="submenu">
        	<li><a href="@Url.Action("VoteList")">投票管理</a></li>
        	<li class="sel"><a href="#">投票选项管理</a></li>
        	<li><a href="@Url.Action("AddVoteResult", new {voteId=Request.QueryString["ID"].ToString() })">新加投票选项</a></li>
        </ul>


    <div class="top15">
        	<table width="100%" cellpadding="5" cellspacing="0" class="tblist">
            	<tr>
                    <th width="40" align="center"></th>
                    <th align="left" >选项</th>  
                    <th width="60" align="left" >排序</th>  
                    <th width="60" align="left" >投票结果</th>  
                    <th width="120" align="left">管理操作</th>
                </tr>
                @{
  foreach (VoteResultInfo voteResult in Model.ResultsList)
  {
  <tr>
    <td align="center">@voteResult.Id</td>
    <td>@voteResult.Result</td>
    <td>@voteResult.DisplayOrder</td>
    <td>@voteResult.Count</td>
    
    <td>
        @Html.ActionLink("[编辑]", "editVoteResult", new {id=@voteResult.VoteId, resultId = @voteResult.Id }, new { @class = "editOperate" })       
        @Html.ActionLink("[删除]", "delVoteResult", new {id=@voteResult.VoteId,  resultId = @voteResult.Id }, new { @class = "deleteOperate" })
    </td>
    </tr>
  }
  }
                </table>
        <div class="dataListEdit" style="display:none;">
<a href="#" delUrl="@Url.Action("del")" class="batch batchDel">批量删除</a>
</div>

</div>
         
         </div>
    
    }
    }