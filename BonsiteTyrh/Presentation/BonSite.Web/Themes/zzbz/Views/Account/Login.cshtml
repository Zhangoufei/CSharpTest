@model BonSite.Web.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <script src="/Scripts/utils.js" type="text/javascript"></script>
    <script src="/Scripts/account.js" type="text/javascript"></script>
    <link href="/Administration/Content/Css/user_login.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        var returnUrl = "@Model.ReturnUrl";
        var shadowName = "@Model.ShadowName";
       
    </script>

    <script type="text/javascript">
        function ex(e, form) {
            e = e || window.event;
            if (e.keyCode === 13) {
                login();
            }
        }
</script>
</head>
<body>
    <form name="loginForm" action="" onkeyup="return ex(event,this);">
     <div class="loginPageBody">
        <div class="LoginWrapbg">
            <div style="width: 100%; height: 50%; left: 0; top: 0; z-index: -1;"></div>
            <div class="loginpart">

                <div class="loginLogo">
                    @WorkContext.SiteConfig.SiteTitle
                </div>
                <div class="welcome">用户登录</div>
                <div class="loginBar" id="loginBar">


                    <div class="fieldWrap">
                        <div class="lable">用户名：</div>
                        <div class="inputWrap">
                            <input type="text" name="accountName" value="" class="inputText"/>
                        </div>
                        <div class="msgWrap">
                            <span id="RequiredFieldValidator1" style="color:Red;visibility:hidden;">用户名不能为空</span>
                        </div>
                    </div>
                    
                    <div class="fieldWrap">
                        <div class="lable">密码：</div>
                        <div class="inputWrap">
                            <input type="password" name="password" value="" class="inputText"/>
                        </div>
                        <div class="msgWrap">
                            <span id="RequiredFieldValidator2" style="color:Red;visibility:hidden;">密码不能为空</span>
                        </div>
                    </div>
                    @if (Model.IsVerifyCode)
                { 
                    <div class="fieldWrap">
                        <div class="lable">验证码：</div>
                        <div class="inputWrap" style="width:80px;">
                            <input type="text" name="verifyCode" autocomplete="off"  class="inputText" style="width:80px;"/>
                        </div>
                        <div class="msgWrap">
                            <img id="verifyImage" style="cursor:hand" height="24" title="点击刷新验证码" onclick="this.src='/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage" />
                        </div>
                    </div>
                }
                @if (Model.IsRemember)
                {
                    <div class="fieldWrap">
                        <div class="lable"></div>
                        <div class="inputWrap" style="background-image:none;">
                            <input name="isRemember" type="checkbox" value="1" style="width: 20px;" />下次自动登录
                        </div>
                    </div>
                }

                    <div class="loginBtnWrap">

                        <a id="lnkLogin" class="loginbtn" href="javascript:void(0)" onclick="login()">登录</a>
                        <a href="/User/GetPassword.aspx" class="btnGetpassword" target="_blank">找回密码</a>

                    </div>

                </div>
            </div>
            <div class="copyright">
                <div class="center">
                      版本：@WorkContext.SiteVersion @WorkContext.SiteCopyright
                </div>
            </div>
        </div>
    </div>
        
                </form>

</body>
</html>
