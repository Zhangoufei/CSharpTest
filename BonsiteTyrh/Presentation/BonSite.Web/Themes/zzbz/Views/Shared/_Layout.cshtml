    <div class="body-main mui-off-canvas-wrap  mui-slide-in">
        <aside id="offCanvasSide" class=" ">
            <div class="index-nav container" style="top:35px">
                <ul>
                    <li><a href="/home/index">首页</a></li>
                    @{foreach (NavInfo navinfo in (WorkContext.NavList.Where(p => p.Pid == WorkContext.Type).ToList()))
                    {
                        <li>
                            @{
                        List<NavInfo> sublist = WorkContext.NavList.Where(p => p.Pid == @navinfo.Id).ToList();
                        if (sublist.Count > 0)
                        {
                            <a>@navinfo.Name</a>
                                <div class="sidebar">
                                    @foreach (NavInfo subinfo in sublist)
                                    {
                                        if (subinfo.Target.Equals(1))
                                        {
                                            <a href="@subinfo.Url" target="_blank">@subinfo.Name</a>
                                        }
                                        else
                                        {
                                            <a href="@subinfo.Url">@subinfo.Name</a>
                                        }

                                    }
                                </div>
                        }
                        else
                        {

                            if (navinfo.Target.Equals(1))
                            {
                                <a href="@navinfo.Url" target="_blank">@navinfo.Name</a>
                            }
                            else
                            {
                                <a href="@navinfo.Url">@navinfo.Name</a>
                            }
                        }

                            }

                        </li>
                    }
                    }
                </ul>
                <div class="clear"></div>
            </div>
        </aside>
        <a href="javascript:;" class="mui-icon mui-action-menu mui-icon-bars mui-pull-left"></a>
