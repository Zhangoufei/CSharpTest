    <script>
      

        //首页头部轮播
        $(window).on('load resize', function () {
                var swiper = new Swiper('.index-banner .swiper-container', {
                    pagination: '.index-banner .swiper-pagination',
                    nextButton: '.index-banner .swiper-button-next',
                    prevButton: '.index-banner .swiper-button-prev',
                    paginationClickable: true,
                    //spaceBetween: 30,
                    centeredSlides: true,
                    autoplay: 4000,
                    autoplayDisableOnInteraction: false,
                    loop: true,
                    //slidesPerView: 1.4,
                    loopedSlides: 3,
                    slidesPerView: 'auto',//解决第三张图最右侧不显示
                    onInit: function (swiper) { //Swiper2.x的初始化是onFirstInit
                        swiperAnimateCache(swiper);
                        swiperAnimate(swiper);
                    },
                    onSlideChangeEnd: function (swiper) {
                        swiperAnimate(swiper);
                    }
                });
        })

    var swiper = new Swiper('.scenery-content .swiper-container', {
        pagination: '.scenery-content .swiper-pagination',
        nextButton: '.scenery-content .swiper-button-next',
        prevButton: '.scenery-content .swiper-button-prev',
        paginationClickable: true,
        slidesPerView: 'auto'

    });

    function topimg() {
        $('body').animate({
            scrollTop: 0
        }, 300);
        return false;
    }

    $(window).scroll(
        function () {
            var scrollTop = $(this).scrollTop();
            //console.log(scrollTop)
            var scrollHeight = $(document).height();
            var windowHeight = $(this).height();
            if (scrollTop + windowHeight == scrollHeight) {
                // 此处是滚动条到底部时候触发的事件，在这里写要加载的数据，或者是拉动滚动条的操作
                $(".top-box").show(500);
            } else {
                $(".top-box").hide();
            }
        });

    $(window).resize(function () {
        var windowwid = $(window).width();

        if (windowwid < 992) {
            $("#offCanvasSide").removeClass("pc");
            $("#offCanvasSide").removeClass("wap");
            $("#offCanvasSide").addClass("pad");
        };
        if (windowwid < 768) {
            mui.init({
                gestureConfig: {
                    tap: true, //默认为true
                    doubletap: true, //默认为false
                    longtap: true, //默认为false
                    swipe: true, //默认为true   禁止滑动
                    drag: true, //默认为true  禁止拖动
                    hold: false, //默认为false，不监听
                    release: false //默认为false，不监听
                }
            });

            $(".body-main aside").addClass("mui-off-canvas-left");
            $("#offCanvasSide").removeClass("pc");
            $("#offCanvasSide").removeClass("pad");
            $("#offCanvasSide").addClass("wap");
            $(".mui-action-menu").attr("href", "#offCanvasSide");

        };

        if (windowwid > 768) {
            $(".body-main aside").removeClass("mui-off-canvas-left");
            $(".body-main aside").attr("style", "");
            $(".mui-action-menu").attr("href", "javascript:;");
        }
        if (windowwid > 992) {
            $("#offCanvasSide").addClass("pc");
            $("#offCanvasSide").removeClass("wap");
            $("#offCanvasSide").removeClass("pad");

        }

    });
        //修改
    $(window).on("ready resize",function () {
        var windowW = $(window).width();
        console.log('windowW'+windowW)
        if (windowW >=1200) {
            $('.list-nav-right ').css({
                height:355+'px' ,
                overflowY:'scroll'
            })
        }
        else if (windowW >=992 && windowW < 1200) {
            $('.list-nav-right ').css({
                height: 286 + 'px',
                overflowY: 'scroll'
            })
        } else if (windowW <992 && windowW >=768) {
            $('.list-nav-right ').css({
                height: 216 + 'px',
                overflowY: 'scroll'
            })
        }
        if (windowW < 768) {
            $('.list-nav-right ').addClass('swiper-container');
            $('.list-nav-box ').addClass('swiper-wrapper');
            $('.list-nav-box li').addClass('swiper-slide');
            $(document).ready(function () {
                var swiper = new Swiper('.list-content .swiper-container', {
                    pagination: '.list-content  .swiper-pagination',
                    nextButton: '.list-content .swiper-button-next',
                    prevButton: '.list-content .swiper-button-prev',
                    paginationClickable: true,
                    spaceBetween: 30,
                    centeredSlides: true,
                    //autoplay: 2500,
                    autoplayDisableOnInteraction: false
                });
            })
        }
    })
        
    var windowwid = $(window).width();

    if (windowwid < 992) {
        $("#offCanvasSide").removeClass("pc");
        $("#offCanvasSide").removeClass("wap");
        $("#offCanvasSide").addClass("pad");
    };
    if (windowwid < 768) {
        mui.init({
            gestureConfig: {
                tap: true, //默认为true
                doubletap: true, //默认为false
                longtap: true, //默认为false
                swipe: true, //默认为true   禁止滑动
                drag: true, //默认为true  禁止拖动
                hold: false, //默认为false，不监听
                release: false //默认为false，不监听
            }
        });

        $(".body-main aside").addClass("mui-off-canvas-left");
        $("#offCanvasSide").removeClass("pc");
        $("#offCanvasSide").removeClass("pad");
        $("#offCanvasSide").addClass("wap");
        $(".mui-action-menu").attr("href", "#offCanvasSide");
    };

    if (windowwid > 768) {
        $(".body-main aside").removeClass("mui-off-canvas-left");
        $(".body-main aside").attr("style", "");
        $(".mui-action-menu").attr("href", "javascript:;").addClass("down-nav");
     
    }
    if (windowwid > 992) {
        $("#offCanvasSide").addClass("pc");
        $("#offCanvasSide").removeClass("wap");
        $("#offCanvasSide").removeClass("pad");
        
    }

    mui.init({
        gestureConfig: {
            tap: true, //默认为true
            doubletap: true, //默认为false
            longtap: true, //默认为false
            swipe: false, //默认为true   禁止滑动
            drag: false, //默认为true  禁止拖动
            hold: false, //默认为false，不监听
            release: false //默认为false，不监听
        }
    });
    //禁止手势右滑

    //实现ios平台原生侧滑关闭页面；
    if (mui.os.plus && mui.os.ios) {
        mui.plusReady(function () { //5+ iOS暂时无法屏蔽popGesture时传递touch事件，故该demo直接屏蔽popGesture功能
            plus.webview.currentWebview().setStyle({
                'popGesture': 'none'
            });
        });
    }

    //导航二级下拉
    $('.pc .index-nav li').hover(function () {
        $(this).find('.sidebar').animate({
            opacity: '1',
            height: 'show'
        }, 200);
    }, function () {
        $('.pc .sidebar').stop(true, true).hide();
    });

    $(".pad .index-nav li").click(function () {
        $(".pad .sidebar").hide();
        $(this).find(".sidebar").show();
    })

    $(".wap .index-nav li").click(function () {
        $(".wap .sidebar").hide();
        $(this).find(".sidebar").show();
    })

    $(".down-nav").click(function () {
        if ($(this).hasClass("up-nav")) {
            $(".index-nav").slideUp();
            $(".mui-off-canvas-backdrop").hide();
            $(this).addClass("down-nav");
            $(this).removeClass("up-nav");
        } else {
            $(".index-nav").slideDown();
            $(".mui-off-canvas-backdrop").css({
                "background": "#000",
                "opacity": ".8",
                "position": "absolute",
                "top": "0",
                "left": "0",
                "width": "100%",
                "height": "100%",
                "z-index": "100"
            }).show();
            $(this).removeClass("down-nav");
            $(this).addClass("up-nav");
        }

    });    
    </script>
